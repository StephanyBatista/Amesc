@model List<Amesc.WebApp.ViewModels.CursoParaListaViewModel>
@{
    ViewData["Title"] = "Cursos";
}

<div id="pad-wrapper">

    <div class="row header">
        <div class="col-md-1">
            <h3>Cursos</h3>
        </div>
    </div>
    <div class="row">
        <a href="/Cursos/Novo" class="btn btn-primary">Novo</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Nome
                            </td>
                            <td>
                                @item.Descricao
                            </td>
                            <td>
                                <a href="/Cursos/Editar/@item.Id" class="btn">Editar</a>
                            </td>
                            <td>
                                <a href="/AbrirMatricula/@item.Id" class="btn">Abrir Matricula</a>
                            </td>
                        </tr>   
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



