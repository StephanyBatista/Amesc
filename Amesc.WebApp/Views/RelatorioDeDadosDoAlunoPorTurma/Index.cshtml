@using Amesc.WebApp.Controllers
@using Amesc.WebApp.Util
@using Amesc.WebApp.ViewModels
@using Amesc.WebApp.Views
@model List<Amesc.WebApp.Views.RelatorioDeDadosDoAlunoPorTurmaViewModel>
@{
    ViewData["Title"] = "Alunos";
}

<div id="pad-wrapper">

    <div class="row header">
        <div class="col-md-8">
            <h3>Relatório de dados do aluno por turma</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Index" method="get">
                <div class="form-group">
                    <label class="col-md-1 control-label">Curso</label>
                    <div class="col-md-3">
                        <select class="form-control" name="turmaId" asp-items="@(new SelectList(@ViewBag.Turmas,"Id","NomeCursoEDataDoCurso"))"></select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-1">
                        <button class="btn btn-success">Buscar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="alunos" class="table table-hover">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Endereço</th>
                        <th>Tipo de publico</th>
                        <th>Telefone</th>
                        <th>Orgão Emissor</th>
                        <th>RG</th>
                        <th>Data de nascimento</th>
                        <th>Registro profissional</th>
                        <th>Especialidade</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Nome
                        </td>
                        <td>
                            @item.Cpf
                        </td>
                        <td>
                            @item.Endereco
                        </td>
                        <td>
                            @item.TipoDePublico
                        </td>
                        <td>
                            @item.Telefone
                        </td>
                        <td>
                            @item.OrgaoEmissor
                        </td>
                        <td>
                            @item.RG
                        </td>
                        <td>
                            @item.DataDeNascimento
                        </td>
                        <td>
                            @item.RegistroProfissional
                        </td>
                        <td>
                            @item.Especialidade
                        </td>
                    </tr>   
                }
                </tbody>
            </table>
        </div>
    </div>
</div>



