@model Amesc.WebApp.ViewModels.MatriculaParaCadastroViewModel
@{
    ViewData["Title"] = "Matriculas";
}

<div id="pad-wrapper">

    <div class="row">
        <div class="col-md-12">
            <a href="/Matriculas" class="btn">Voltar</a>
        </div>
    </div>
    <div class="row header">
        <div class="col-md-1">
            <h3>Matriculas</h3>
        </div>
    </div>
    <div class="row form-wrapper">
        <div class="col-md-12">
            <form id="form" class="form-horizontal" asp-action="Novo" asp-controller="Matriculas" asp-anti-forgery
                  data-ajax="true" data-ajax-method="POST" data-ajax-failure="formQuandoFalha" data-ajax-success="window.location = '/Matriculas'">
                <div class="form-group">
                    <label class="col-md-2 control-label">Aluno</label>
                    <div class="col-md-10">
                        <select class="form-control" asp-for="IdAluno" asp-items="@(new SelectList(@Model.Alunos, "Id", "Nome"))">
                            <option></option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Curso</label>
                    <div class="col-md-10">
                        <select class="form-control" asp-for="IdCursoAberto" asp-items="@(new SelectList(@Model.CursosAbertos,"Id","NomeCursoEDataDoCurso"))"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Está pago?</label>
                    <div class="col-md-4">
                        <input type="checkbox" asp-for="EstaPago"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <button class="btn btn-success">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/jquery.priceformat.min.js"></script>
    <script src="/js/excecaoDeDominio.js"></script>
}

    




