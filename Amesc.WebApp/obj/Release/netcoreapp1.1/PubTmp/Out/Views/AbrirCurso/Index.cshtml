@using Amesc.WebApp.Util
@using Amesc.WebApp.ViewModels
@model PaginatedList<CursoAbertoParaListaViewModel>
@{
    ViewData["Title"] = "Cursos";
}

<div id="pad-wrapper">

    <div class="row">
        <div class="col-md-12">
            <a href="/Cursos" class="btn">Voltar</a>
        </div>
    </div>

    <div class="row header">
        <div class="col-md-12">
            <h3>Abrir matricula para @ViewBag.Curso.Nome</h3>
        </div>
    </div>
    <div class="row">
        <a href="/AbrirCurso/Novo/@ViewBag.Curso.Id" class="btn btn-primary">Novo</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Data de abertura</th>
                    <th>Data de fechamento</th>
                    <th>Data do curso</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.DataDeAbertura
                        </td>
                        <td>
                            @item.DataDeFechamento
                        </td>
                        <td>
                            @item.DataDoCurso
                        </td>
                        <td>
                            <a href="/AbrirCurso/Editar/@item.Id" class="btn">Editar</a>
                        </td>
                    </tr>   
                }
                </tbody>
            </table>
            
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }
            
            <a asp-action="Index"
               asp-route-page="@(Model.PageIndex - 1)"
               class="btn btn-default @prevDisabled">
                Anterior
            </a>
            <a asp-action="Index"
               asp-route-page="@(Model.PageIndex + 1)"
               class="btn btn-default @nextDisabled">
                Próximo
            </a>
        </div>
    </div>
</div>



