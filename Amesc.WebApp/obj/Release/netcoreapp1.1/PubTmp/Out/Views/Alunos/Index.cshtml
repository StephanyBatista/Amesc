@model List<Amesc.WebApp.ViewModels.AlunoParaListaViewModel>
@{
    ViewData["Title"] = "Alunos";
}

<div id="pad-wrapper">

    <div class="row header">
        <div class="col-md-1">
            <h3>Alunos</h3>
        </div>
        <div class="col-md-2">
            <a href="/Alunos/Novo" class="btn btn-primary">Novo</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Tipo de publico</th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Nome
                            </td>
                            <td>
                                @item.Cpf
                            </td>
                            <td>
                                @item.TipoDePublico
                            </td>
                            <td>
                                <a href="/Alunos/Editar/@item.Id" class="btn">Editar</a>
                            </td>
                        </tr>   
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



